<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:id="@+id/collect_item"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/history_newsImage"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/history_newsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/history_newsInfo"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center_vertical"

                >
                <TextView
                    android:id="@+id/history_newsTime"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_height="20dp"
                    android:layout_gravity="start"
                    />


                <TextView
                    android:id="@+id/history_newsFeedbackNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="40dp"
                    android:drawableLeft="@drawable/feedback_icon"

                    />
                <Button
                    android:id="@+id/delete_history"
                    android:background="@mipmap/delete_collect"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="20dp"
                    android:hint="删除"
                    android:layout_gravity="center_vertical"

                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>